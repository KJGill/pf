<div class = "container container_border">
<h1> Make a New Investment</h1>

<%= form_for @investment, url: '/investments/create' do |f| %>
	<div class = "container">
		<div class = "row">
			<div class = "row">
		  	<div class="form-group col-md-5">
		    	<div ><%= f.label :series_id %><br>
      			<%= f.collection_select(:series_id, Series.all, :id, :name) %> 
    			</div>
		  	</div>
		 </div>
			<div class = "form-group col-md-4">
				<%= f.label :amount  %>
				<%= f.number_field :amount, :class => 'form-control borrow' %>
	 		</div>
		</div>
		<div class="form-group col-md-2	">
	    	<%= f.submit "submit", :class => "btn btn-success" %>
	  	</div>
	</div>
<% end %>
</div>
