<div class = "container full-page">

	<br></br>

	<!-- Header -->
	
	<div class = "row">
		<div class="flash_messages">
		  <% if flash[:success] %>
		    <div class="success">
		      <%= flash[:success] %>
		    </div>
		  <% end %>
		  <% if flash[:error] %>
		    <div class="error">
		      <%= flash[:error] %>
		    </div>
		  <% end %>
		</div>
		<div class = "col-md-1"> </div>
		<div class = "col-md-11">
			<div class = "container welcome" style ="width: 100%">
				<h1> Welcome, <%= current_investor.first_name %></h1>
			</div>
		</div>
	</div>

	<!-- Tab header -->

	<div class = "row" style="margin-top: 1em">  
		<div class = "col-md-1">
		</div>
		<div class = "col-md-8 graph-charts">
			<div class = "row">
				<div class = "col-md-8">
					<ul class="nav nav-tabs" role="tablist" id="myTab">
						<li class="active school-tabs"><a href="#returns1" role="tab" data-toggle="tab">Columbia</a></li>
						<li class="school-tabs"><a href="#returns2" role="tab" data-toggle="tab">Insead</a></li>
					</ul>
				</div>
				
			</div>


			<!-- Tab Content -->
			<div class = "row">
				<div class="tab-content graphs">
					<div class="tab-pane active" id="returns1">	
						<div class="total-investment"> 
							<p>Total Investment Value: $<%= current_investor.investments.last.amount.round(0) %></p>
						</div>
						<br></br>
						<button type="button" class="close" id = "graph" data-container="body" data-toggle="popover" data-placement="right" data-content="This is a graph of returns from the last Columbia School series. Once you begin gettign copoun payments in 18 months, you will begin to see how your actual returns compare to what was expected.">
						</button>

						
						<%= render 'charts' %>


					</div>
					<div class="tab-pane" id="returns2">content2</div>
					<div>
						<div class="col-md-4 series">
							<p class = "series_title">your series:</p>
							<p class = "series_list"> 1, 2, 3</p>
						</div>
						<div class="col-md-4 ">
							
						</div>
						<div class="col-md-4 new_investment_col">
							<%= button_to "New Investment", new_investment_path, method: :get, :class => 'b4_investment_link' %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class = "col-md-3">
			<div class = "container copouns">
				<table class="table table-striped table-bordered" border = "3">
					<tr>
						<th>Notifications</th>
					</tr>
					<button type="button" class="close" id = "notifications" data-container="body" data-toggle="popover" data-placement="left" data-content="This is your notification center. Here you will see reminders, letting you know if there are any documents you need to upload, as well as notices on when your next copoun date is."></button>
				</table>
			</div>

			<%= render "investor_relations_manager" %>
		</div>
	</div>
</div>



<div class = "row">
	<div class = "col-md-1">
	</div>
	<div class = "col-md-10">
		<div class ="txts"> 
			6 Students Funded 
		</div>
		<div class="flexslider">
			<ul class="slides">
				<li>
					<img src="/assets/student_class.png" />
				</li>
				<li>
					<img src="/assets/student_class.png" />
				</li>
				<li>
					<img src="/assets/student_class.png" />
				</li>
				<li>
					<img src="/assets/student_class.png" />
				</li>
				<li>
					<img src="/assets/student_class.png" />
				</li>
				<li>
					<img src="/assets/student_class.png" />
				</li>
				<!-- items mirrored twice, total of 12 -->
			</ul>
		</div>
	</div>
	<div class = "col-md-1">
	</div>
</div>
</div>

<script type="text/javascript">
	$(window).load(function(){
		$('#graph').popover('show')
	});
	$(window).load(function(){
		$('#notifications').popover('show')

	});
</script>



</div>
