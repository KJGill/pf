<div class="modal fade linkedin" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Linkedin</h4>
            </div>

            <div class="modal-body">
                <form method="POST">
                    <!-- add recipeints -->
                    <div class="row">
                        <div class="col-md-12">
                            <h4> Add your Friend's Information:</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="dynamicInputL1">
                                <p class="recipient_name"> Recipient Name  <input type="text" name="myInputsL1[]"></p> 
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 add_recipient">
                            <input type="button" value="Add another recipient" onClick="addInputLinkedin('dynamicInputL1');">
                        </div>
                    </div>
                    <br>
                    <!-- choose article you want to share -->
                    <div class="row">
                        <div class="col-md-12">
                            <h4> Share an Article:</h4>
                        </div>
                    </div>
                    
                    <br>
                    <div class="row">
                        <div class="col-md-12">
                            <h4 class = 'message_title'>Send a Message:</h4>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <textarea rows="4" cols="100" name="comment" form="usrform" class = "message_body">Write a message here...</textarea>
                        </div>  
                    </div>                  
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default">Submit</button> 
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>              
        </div>
    </div>
</div>