<div class = "container full-page">
	<br></br>
	<div class="row">
		<div class="col-md-12">
			<h1> Network </h1>
		</div>
	</div>	
	<br></br>
	<!-- invite friends container -->
	<div class="invite_friends">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
			<h2 class = "invite">Invite friends through: </h2>
			</div>
			<div class="col-md-4"></div>
		</div>
		<br></br>
		<br></br>
		<div class="row">
			<!-- modal buttons -->
			<div class="col-md-2"></div>
			<div class="col-md-4">
				<!-- email button -->
				<button class="btn btn-primary share_btn email_btn" data-toggle="modal" data-target=".email">Email</button>
			</div>
			<div class="col-md-4">
				<!-- linkden button -->
				<button class="btn btn-primary share_btn linkedin_btn" data-toggle="modal" data-target=".linkedin">Linkedin</button>
			</div>
			<div class="col-md-2"></div>
			<!-- modal content -->
			<%= content_for :script do %>
			<!-- email modal -->
			<div class="modal fade email" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
							<h4 class="modal-title" id="myModalLabel">Email</h4>
						</div>
						<div class="modal-body">
							This is where email content goes
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>

			<!-- linkden modal -->
			<div class="modal fade linkedin" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
							<h4 class="modal-title" id="myModalLabel">Linkedin</h4>
						</div>
						<div class="modal-body">
							This is where linkden content goes
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>






<script type="text/javascript">
$(function () { 
	$("#myModal").modal({show: false});
});  
</script>